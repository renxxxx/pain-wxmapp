<scroll-view id="page"  bindscrolltoupper='scrollUpper' style='height: {{scrollHeightEnd}}rpx' scroll-into-view="{{toView}}" scroll-with-animation='true' scroll-y="true" upper-threshold="100" scroll-top="{{scrollTop}}" enable-back-to-top="true" bindscrolltolower="lower" >
  <view class="chatBox lf">
    <view class="chatItem lf" id="item{{index}}"  style="width:100%" wx:for="{{msgsList}}">
      <view  wx:if="{{item.send==0}}">
        <image class="avator lf"  src="../images/tx1.png"></image>
        <text class="sj1 lf" wx:if="{{item.text}}"></text>
        <text class="ft_28 col_333 lf txt wordBreak" wx:if="{{item.text}}">{{item.text}}</text>
        
        <image bindtap="previewImage" data-src='{{item.img}}' class="lf img" mode="aspectFit"   wx:if="{{item.img}}" src="{{item.img}}"></image>
        <!-- <text class="ft_28 col_999">{{item.createTime}}</text> -->
      </view>
      <view wx:if="{{item.send==1}}">
        <image class="avator rt"   src="../images/tx2.png"></image>
        <text class="sj2 rt "  wx:if="{{item.text}}"></text>
        <text class="ft_28 col_333 rt txt wordBreak wordMe"  wx:if="{{item.text}}">{{item.text}}</text>
        
        <image  bindtap="previewImage" data-src='{{item.img}}' class="rt img" mode="aspectFit"  src="{{item.img}}"  wx:if="{{item.img}}"></image>
        
        <!-- <text class="ft_28 col_999">{{item.createTime}}</text> -->
      </view>
    </view>
</view>
</scroll-view>

