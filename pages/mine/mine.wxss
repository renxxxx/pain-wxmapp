/* pages/plMine/plMine.wxss */
.mine{
  width: 100%;
  height: calc(100vh - 106rpx);
  margin: 0rpx;
  padding: 0rpx;
  background-color: #F2F5FB;
}
.title{
  width: 100%;
  height: 250rpx;
  background-color: #FFFFFf;
  display: flex;
  vertical-align: left;
}
.titleBox{
  width: 100%;
  height: 180rpx;
  display: flex;
  vertical-align: left;
  margin: auto 0px;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
}
.t_cover{
  width: 180rpx;
  height: 180rpx;
  text-align: center;
  line-height: 250rpx;
  overflow: hidden;
}
.t_cover>image{
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 50%;
  border: 1px solid #ab8e8e;
  box-sizing: border-box;
}
.t_content{
  width: calc(100% - 180rpx);
  height: 180rpx;
  padding: 0rpx 30rpx 0rpx;
  box-sizing: border-box;
  display: flex;
}
.t_contentBox{
  width: 100%;
  height: 80rppx;
  margin: auto 0px;
}
.tc_type,.tc_nickname,.tc_name{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}
.list{
  width: 100%;
  height: calc(100% - 290rpx);
  background-color: #FFFFFf;
  margin-top: 20rpx;
  overflow-y: scroll;
}
.i_options{
  height:90rpx;
  line-height:90rpx;
  border-bottom:1px solid #e2e2e2;
  padding:0px 30rpx;
  box-sizing:border-box;
  cursor:pointer;
}