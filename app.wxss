.searchBox{
  border-top:1rpx solid #e5e5e5;
  position: fixed;
  z-index: 2;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  /* position: relative; */
}
.searchBox .inputBox{
  font-size: 28rpx;
  width: 570rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e5e5e5;
  line-height: 60rpx;
  height: 60rpx;
  margin: 19rpx 25rpx ;
  float: left;
  padding: 0 15rpx;
  box-sizing: border-box;
}
.searchBox input{
  font-size: 28rpx;
  width: 490rpx;
  line-height: 60rpx;
  height: 60rpx;
  outline: none;
  float: left;
}
.searchBox .searchThis{
  float: right;
  width: 110rpx;
  text-align: center;
  margin-right: 20rpx;
line-height: 100rpx;
font-size: 28rpx;

}
.searchBox icon{
  padding: 15rpx 10rpx;
  width: 30rpx;
  float: left;
}